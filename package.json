  "license": "MIT",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.0.0",
    "@material-ui/icons": "^4.0.0",
    "@material-ui/styles": "^4.0.0",
    "clsx": "^1.0.4",
    "dayjs": "^1.8.15",
    "firebase": "^6.2.2",
    "jss": "^9.8.7",
    "lodash": "^4.17.15",
    "next": "^8.1.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-firebaseui": "^3.1.2",
    "react-swipeable-views": "^0.13.3",
    "react-swipeable-views-utils": "^0.13.3",
    "styled-jsx": "^3.2.1",
    "unfetch": "^4.1.0"
  },
  "scripts": {
    "dev": "next",
    "lint": "eslint components pages src",
    "build": "npm run lint && next build",
    "clean": "rm -rf .next/ out/",
    "export": "npm run clean && npm run build && next export -o out && cp -R public/ out/",
    "preview": "npm run export && cd out && serve",
    "release": "git rev-parse --short HEAD | (read hash; gh-pages -t -d out -m \"Release at $hash\" )",
    "deploy": "npm run export && npm run release",
    "start": "next start",
    "test": "jest",
    "test:integration": "jest -c jest.config.integration.js --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@firebase/testing": "^0.11.5",
    "@material-ui/codemod": "^4.0.2",
    "@testing-library/react": "^8.0.4",
    "@testing-library/react-hooks": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "firebase-tools": "^6.10.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "nanoid": "^2.0.3",
    "react-test-renderer": "^16.8.6",
    "serve": "^11.0.1"
  }
}
